{
 "compilerOptions": {
   "target": "es5",
   "lib": [
     "dom",
     "dom.iterable",
     "esnext"
   ],
   "baseUrl": "src",
   "skipLibCheck": true,
   "esModuleInterop": true,
   "allowSyntheticDefaultImports": true,
   "strict": true,
   "forceConsistentCasingInFileNames": true,
   "module": "commonjs",
   "outDir": "dist",
   "moduleResolution": "node",
   "resolveJsonModule": true,
   "declaration": true,
   "jsx": "react"
 },
 "include": [
   "src"
 ]
}
